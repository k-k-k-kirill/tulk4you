{#
 # View template for the base document construction.
 #}
<!doctype html>
<html class="no-js" {{ site.language_attributes }}>

	{% block head %}
		<head>
			<!-- Google Tag Manager -->
			<script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
			new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
			j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
			'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
			})(window,document,'script','dataLayer','GTM-PFKDQT9');</script>
			<!-- End Google Tag Manager -->
			<!-- Global site tag (gtag.js) - Google Analytics -->
			<script async src="https://www.googletagmanager.com/gtag/js?id=UA-154990351-1"></script>
			<script>
				window.dataLayer = window.dataLayer || [];
				function gtag() {
					dataLayer.push(arguments);
				}
				gtag('js', new Date());

				gtag('config', 'UA-154990351-1');
			</script>
			<meta charset="utf-8">
			<meta http-equiv="x-ua-compatible" content="ie=edge">
			<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
			<meta name="google-site-verification" content="GWSOf7vLUdtgel5HbNZK4rXrczDq_ElIn9jRdLaMqvU"/>
			{{ function('wp_head') }}
		</head>
	{% endblock %}

	<body class="{{ body_class }} {% block body_classes %}{% endblock %}">
		<!-- Google Tag Manager (noscript) -->
		<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-PFKDQT9"
		height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
		<!-- End Google Tag Manager (noscript) -->
		{{ function('wp_body_open') }}

		{% block site_body %}

			{% block site_header %}
				{% include 'site-header/site-header.twig' %}
			{% endblock %}

			<main class="header-margin {% block main_class %}{% endblock %}" role="main">
				{% block site_content %}
					{{ __('Sorry, no content was found!', textdomain) }}
				{% endblock %}
			</main>

			{% block site_footer %}
				{% include 'site-footer/site-footer.twig' %}
			{% endblock %}

		{% endblock %}

		{{ function('wp_footer') }}

	</body>

</html>
