{#
 # Template for a single content's content.
 #
 # @version 1.0.0
 #
 # @var post	The Timber Post object.
 #}

<section class="single-content single-content--{{ post.type }} mb-8">
  <div class="container">
    <div class="grid grid-cols-12 md:px-6">
      <div class="col-span-12 lg:col-span-7 lead">
        {{ post.get_paged_content }}
      </div>
    </div>
  </div>
</section>
